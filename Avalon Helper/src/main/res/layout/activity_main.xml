<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#857d71"
    tools:context="${packageName}.${activityClass}">

    <ImageView
        android:id="@+id/iv_main_title"
        android:src="@drawable/avalon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp" />

    <Button
        android:id="@+id/btn_main_play"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:text="@string/main_play_button"/>

    <Button
        android:id="@+id/btn_main_stats"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:text="@string/main_stats_button"/>

    <TextView
        android:id="@+id/tv_main_copyright_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:text="@string/main_copyright_notice"/>

</RelativeLayout>
